                    <ColumnDefinition Width="617*"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="dataGrid1" HorizontalAlignment="Left" Margin="-30,290,0,0" VerticalAlignment="Top"/>
                <Button x:Name="button" Content="Register" TabIndex="6" Grid.Column="3" HorizontalAlignment="Left" Margin="179,214,0,0" VerticalAlignment="Top" Width="75" Click="registerCarHandler" RenderTransformOrigin="-1.187,-0.364"/>
                <RadioButton x:Name="radioRegisterCar" TabIndex="4" IsChecked="True" Content="Car" HorizontalAlignment="Left" Margin="6,182,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.Column="1"/>
                <Label x:Name="label2" Content="Choose vechile  type:&#xD;&#xA;" HorizontalAlignment="Left" Margin="3,140,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.Column="1"/>
                <RadioButton x:Name="radioRegisterTruck" TabIndex="5" Content="Truck" HorizontalAlignment="Left" Margin="53,182,0,0" VerticalAlignment="Top" Grid.Column="3"/>
                <Label x:Name="label3" Content="Price" Grid.Column="1" HorizontalAlignment="Left" Margin="0,47,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                <Label x:Name="label3_Copy" Content="Model" Grid.Column="1" HorizontalAlignment="Left" Margin="0,73,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
