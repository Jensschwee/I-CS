<Window x:Class="ME1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ME1_jacmi13"
        mc:Ignorable="d"
        Title="MainWindow" Height="598" Width="700">

    <TabControl x:Name="tabControl" >
        <TabItem Header="Register business">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="31*"/>
                    <ColumnDefinition Width="42*"/>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="597*"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <Button x:Name="button" Content="Register" HorizontalAlignment="Left" Margin="137,309,0,0" VerticalAlignment="Top" Width="75" Grid.Column="3" Click="registerBusinessHandler"/>
                <Label x:Name="label" Content="Name" HorizontalAlignment="Left" Margin="19,23,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="3"/>
                <TextBox x:Name="BusinessNameField" HorizontalAlignment="Left" Height="23" Margin="26,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="3"/>
                <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" Margin="26,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="3"/>
                <Label x:Name="label_Copy" Content="Phone" HorizontalAlignment="Left" Margin="19,60,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="3"/>
                <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="23" Margin="26,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="3"/>
                <Label x:Name="label_Copy1" Content="Address" HorizontalAlignment="Left" Margin="19,138,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="3"/>
                <Label x:Name="label_Copy2" Content="CVR" HorizontalAlignment="Left" Margin="19,91,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="3"/>
                <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Height="23" Margin="26,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="3"/>
            </Grid>
        </TabItem>
        <TabItem Header="Register private">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>


</Window>
