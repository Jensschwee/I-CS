                <TextBox x:Name="txtRegisterModel" TabIndex="2" Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="134,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="txtRegsiterColor" TabIndex="3" Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="134,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
